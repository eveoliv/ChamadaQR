@model Modelo.Cadastros.Aluno
@{
    Layout = "_LayoutIES";
}

<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">Cadastrando um novo Aluno</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoNome" class="control-label"></label>
                <input asp-for="AlunoNome" class="form-control" />
                <span asp-validation-for="AlunoNome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjetoID" class="control-label"></label>
                <select asp-for="ProjetoID" class="form-control" asp-items="@(new SelectList(@ViewBag.Projetos, "ProjetoID", "ProjetoNome"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group text-center h3">
                <input type="submit" value="Cadastrar Aluno" class="btn btn-light" />
                <a asp-action="Index" class="btn btn-info">Retornar à listagem de Alunos</a>
            </div>
        </form>
    </div>
    <div class="card-footer bg-dark text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>

@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
