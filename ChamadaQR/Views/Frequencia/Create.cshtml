@model Modelo.Cadastros.Frequencia
@{
    Layout = "_LayoutIES";
}

<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">Registrando uma nova Presença</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aluno.AlunoNome" class="control-label"></label>
                <select asp-for="Aluno.AlunoNome" class="form-control" asp-items="@(new SelectList(@ViewBag.Alunos, "AlunoID", "AlunoNome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Calendario" class="control-label"></label>
                <select asp-for="Calendario" class="form-control" asp-items="@(new SelectList(@ViewBag.Alunos, "AlunoID", "AlunoNome"))"></select>
            </div>
            <div class="form-group text-center h3">
                <input type="submit" value="Registrar Projeto" class="btn btn-light" />
                <a asp-action="Index" class="btn btn-info">Retornar à listagem de frequencia</a>
            </div>
        </form>
    </div>
    <div class="card-footer bg-dark text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>
@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}