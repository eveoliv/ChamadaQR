@model Modelo.Cadastros.Frequencia
@{
    Layout = "_LayoutIES";
}

<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">Registrando uma nova Presenca</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoID" class="control-label"></label>
                <select asp-for="AlunoID" class="form-control" asp-items="@(new SelectList(@ViewBag.Alunos, "AlunoID", "AlunoNome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataID" class="control-label"></label>
                <select asp-for="DataID" class="form-control" asp-items="@(new SelectList(@ViewBag.Calendarios, "DataID", "DataNome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Presenca" class="control-label"></label>
                <select asp-for="Presenca" class="form-control" asp-items="@(new SelectList(@ViewBag.p, "", ""))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Justificativa" class="control-label"></label>
                <input asp-for="Justificativa" class="form-control" />
                <span asp-validation-for="Justificativa" class="text-danger"></span>
            </div>
            <div class="form-group text-center h3">
                <input type="submit" value="Registrar Presenca" class="btn btn-light" />
                <a asp-action="Index" class="btn btn-info">Retornar à listagem de efetividade</a>
            </div>
        </form>
    </div>
    <div class="card-footer bg-dark text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>
@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}