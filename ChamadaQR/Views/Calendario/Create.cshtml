@model Modelo.Cadastros.Calendario
@{
    Layout = "_LayoutIES";
}
<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">Registrando uma nova Data</div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataNome" class="control-label"></label>
                <input asp-for="DataNome" class="form-control" />
                <span asp-validation-for="DataNome" class="text-danger"></span>
            </div>           
            <div class="form-group text-center h3">
                <input type="submit" value="Registrar Data" class="btn btn-light" />
                <a asp-action="Index" class="btn btn-info">Retornar à listagem de datas</a>
            </div>
        </form>
    </div>
    <div class="card-footer bg-dark text-center text-white">
        Informe os dados acima e/ou clique em um dos botões de ação
    </div>
</div>
@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}