@model IEnumerable<Modelo.Cadastros.Projeto>
@{
    Layout = "_LayoutIES";
}

@section styles {
    @*    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css"/>*@
    <link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">Projetos Cadastrados</div>
    <div class="card-body">
        <table id="tabela_projetos">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjetoID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjetoNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Endereco)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjetoID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjetoNome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProjetoID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ProjetoID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ProjetoID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">Criar um novo projeto</a>
    </div>
</div>


@section ScriptPage {
    @*    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.js"></script>*@
    <script type="text/javascript" src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_projetos').DataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}
